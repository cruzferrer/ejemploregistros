<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>Registroservlet</servlet-name>
        <servlet-class>Controlador.Registroservlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Conexiónbd</servlet-name>
        <servlet-class>Controlador.Conexiónbd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Regser</servlet-name>
        <servlet-class>Controlador.Registroservlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registroservlet</servlet-name>
        <url-pattern>/Registroservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Conexiónbd</servlet-name>
        <url-pattern>/Conexi_nbd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Regser</servlet-name>
        <url-pattern>/Regser</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
